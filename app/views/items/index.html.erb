<div class="page-header">
  <% if logged_in? %>
    <%= link_to new_item_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Item
    <% end %>
  <% end %>
  <h1 Listing>items</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Created By</th>
        <th>Quantity</th>
        <th>Quality</th>
        <th>Description</th>
        <th>Image url</th>
        <th>Price</th>
        <th>Serial number</th>
        <th>Purchased on</th>
        <th>Name</th>
        <th>Sentimental</th>
        <th>Sold</th>
        <th>Color</th>
        <% if logged_in? %>
          <th colspan="3"></th>
        <% else %>
          <th colspan="1"></th>
        <% end %>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @items.each do |item| %>
      <tr>
        <td><%= item.created_by.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.quality %></td>
        <td><%= item.description %></td>
        <td><%= item.image_url %></td>
        <td><%= item.price %></td>
        <td><%= item.serial_number %></td>
        <td><%= item.purchased_on %></td>
        <td><%= item.name %></td>
        <td><%= item.sentimental %></td>
        <td><%= item.sold %></td>
        <td><%= item.color %></td>
        <%= link_to item do %>
          <td>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          </td>
        <% end %>
        <% if logged_in? %>
          <td>
            <%= link_to edit_item_path(item) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
          </td>
        <% end %>
        <td>
          <% if logged_in? %>
            <%= link_to item, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
